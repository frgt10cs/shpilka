@model BotRules.ViewModels.BotEditViewModel
@Html.AntiForgeryToken()
@{
    Layout = "Layout";
}
<head>
    <link href="~/css/editorLayout.css" type="text/css" rel="stylesheet" />
    <link href="~/css/botSv.css" type="text/css" rel="stylesheet" />
</head>
<div class="main">
    <div class="functionPanel">
        <img class="logoImg" src="~/images/Telegram1.png" />
        <div class="functions">
            <input id="functionsButton" class="function" type="button" value="Функции" />
            <input id="storagesButton" class="function" type="button" value="Хранилища" />
            <input id="filesButton" class="function" type="button" value="Файлы" />
            <input id="saveButton" class="function" type="button" value="Сохранить" />
            <form asp-controller="Bot" asp-action="RemoveBot" method="post">
                <input type="hidden"  name="botId" value="@Model.Id"/>
                <input id="deleteBotButton" class="function" type="submit" value="Удалить бота" />
            </form>
        </div>
    </div>
    <div class="editorPanel" id="edPan">
        <input type="hidden" value="@Model.Id" id="BotId" />
        <div class="darkness">
        </div>
        <div class="functionOption">
            <div id="closeDetails" class="close">
                X
            </div>
            <div class="addFunctionIcon opt" title="Добавить новую функцию" id="addOptFunctionIcon">
                +
            </div>
            <div id="inputFunctions">
            </div>
        </div>
        <div id="commandFunctions" class="container">
            <div id="addFunctionIcon" title="Добавить новую функцию" class="addFunctionIcon">
                +
            </div>
        </div>
        <div id="files" class="container">
        </div>
        <div id="storages" class="container">
        </div>
        <div id="addingContainer" class="bContainer">
            <div class="targetInfo adding" id="createNewTarget">
                <input type="button" class="targetEdit" value="Создать" id="showCreateNewStorage" />
                <div id="creating">
                    <div>
                        <b class="cbt">
                            Название Хранилища
                        </b>
                        <input type="text" class="inputData" id="StorageName" />
                    </div>
                    <div id="names">
                        <b class="cbt">
                            Название хр-х данных
                        </b>
                        <input type="text" class="inputData columnName" />
                    </div>
                    <input type="button" value="Добавить поле" class="createTarget" id="addFieldStorage" />
                    <input type="button" value="Создать" class="createTarget" id="createStorage" />
                </div>
            </div>
        </div>
        <form asp-action="UploadStorage" asp-controller="Editor" method="post" enctype="multipart/form-data" id="formFile">
            <div class="file_upload">
                <button type="button">+</button>               
                <input type="file" title="Загрузить хранилище" name="uploadedFile">
            </div>        
            <input  type ="submit"class="addFunctionIcon" title="Загрузить выбранное хранилище" id="UploadStorageToServer" value="+">
        </form>
        <div class="addFunctionIcon" title="Добавить новое хранилище" id="addNewStorage" style="display: block;">
            +
        </div>
        <div id="closeCreate" class="close">
            X
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/Editor.js" type="text/javascript"></script>
